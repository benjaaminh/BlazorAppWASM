@page "/weather"
<!--@using BlazorApp1.Services-->
@inject WeatherService WeatherService;
@attribute [StreamRendering]

<PageTitle>Weather</PageTitle>

<h1>Weather</h1>

<p>This component demonstrates showing data.</p>
<button @onclick="FetchWeather">Get Weather</button>
@if (WeatherMessage == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p>@WeatherMessage</p>
}

@code {

    private string WeatherMessage { get; set; }

    private async Task FetchWeather()
    {
        var country = "Finland"; // or get city from user input
        var weatherData = await WeatherService.GetWeatherAsync(country);
        if (weatherData != null)
        {
            WeatherMessage = $"Current temperature in {weatherData.capital}: {weatherData.main.temp}°C";
        }
        else
        {
            WeatherMessage = "Failed to fetch weather data.";
        }
    }
}
